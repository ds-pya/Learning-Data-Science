import androidx.compose.foundation.layout.*
import androidx.compose.material.icons.Icons
import androidx.compose.material.icons.filled.Refresh
import androidx.compose.material3.*
import androidx.compose.runtime.Composable
import androidx.compose.ui.Alignment
import androidx.compose.ui.Modifier
import androidx.compose.ui.text.font.FontWeight
import androidx.compose.ui.unit.dp

data class QueueMonitorSnapshot(
    val pendingCount: Long,
    val doneCount: Long,
    val actionLlmRuns: Long,
    val visionVlmRuns: Long,
    val routeLlmRuns: Long,
    val summaryLlmRuns: Long,
) {
    val totalModelRuns: Long
        get() = actionLlmRuns + visionVlmRuns + routeLlmRuns + summaryLlmRuns
}

@Composable
fun QueueMonitorCard(
    isRunning: Boolean,                // manager 상태(ON/OFF)
    snapshot: QueueMonitorSnapshot?,   // null이면 아직 로딩 전
    isLoading: Boolean,                // refresh 중 표시
    onRefresh: () -> Unit,
    modifier: Modifier = Modifier,
) {
    Card(modifier = modifier) {
        Column(Modifier.padding(16.dp)) {

            // Header
            Row(
                modifier = Modifier.fillMaxWidth(),
                verticalAlignment = Alignment.CenterVertically
            ) {
                Text(
                    text = "Queue Monitor",
                    style = MaterialTheme.typography.titleMedium,
                    fontWeight = FontWeight.SemiBold,
                    modifier = Modifier.weight(1f)
                )
                IconButton(onClick = onRefresh, enabled = !isLoading) {
                    Icon(Icons.Filled.Refresh, contentDescription = "Refresh")
                }
            }

            Spacer(Modifier.height(8.dp))

            // Status row: Running / Pending / Done
            Row(Modifier.fillMaxWidth(), horizontalArrangement = Arrangement.spacedBy(8.dp)) {
                MetricChip(
                    label = "Running",
                    value = if (isRunning) "ON" else "OFF",
                    modifier = Modifier.weight(1f)
                )
                MetricChip(
                    label = "Pending",
                    value = snapshot?.pendingCount?.toString() ?: "-",
                    modifier = Modifier.weight(1f)
                )
                MetricChip(
                    label = "Done",
                    value = snapshot?.doneCount?.toString() ?: "-",
                    modifier = Modifier.weight(1f)
                )
            }

            Spacer(Modifier.height(12.dp))

            // Model runs (Total + per-model)
            Text(
                text = "Model runs (last 24h window)",
                style = MaterialTheme.typography.labelLarge
            )
            Spacer(Modifier.height(6.dp))

            val total = snapshot?.totalModelRuns
            KeyValueLine("Total", total?.toString() ?: "-")

            Divider(Modifier.padding(vertical = 8.dp))

            KeyValueLine("Action LLM", snapshot?.actionLlmRuns?.toString() ?: "-")
            KeyValueLine("Vision VLM", snapshot?.visionVlmRuns?.toString() ?: "-")
            KeyValueLine("Route LLM", snapshot?.routeLlmRuns?.toString() ?: "-")
            KeyValueLine("Summary LLM", snapshot?.summaryLlmRuns?.toString() ?: "-")

            if (isLoading) {
                Spacer(Modifier.height(10.dp))
                LinearProgressIndicator(Modifier.fillMaxWidth())
            }
        }
    }
}

@Composable
private fun MetricChip(label: String, value: String, modifier: Modifier = Modifier) {
    Surface(
        tonalElevation = 1.dp,
        shape = MaterialTheme.shapes.medium,
        modifier = modifier
    ) {
        Column(Modifier.padding(horizontal = 12.dp, vertical = 10.dp)) {
            Text(label, style = MaterialTheme.typography.labelMedium)
            Text(value, style = MaterialTheme.typography.titleSmall, fontWeight = FontWeight.SemiBold)
        }
    }
}

@Composable
private fun KeyValueLine(key: String, value: String) {
    Row(Modifier.fillMaxWidth(), verticalAlignment = Alignment.CenterVertically) {
        Text(key, style = MaterialTheme.typography.bodyMedium, modifier = Modifier.weight(1f))
        Text(value, style = MaterialTheme.typography.bodyMedium, fontWeight = FontWeight.SemiBold)
    }
}