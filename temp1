import androidx.room.Dao
import androidx.room.Insert
import androidx.room.OnConflictStrategy
import androidx.room.Query

@Dao
interface BehaviorSampleDao {

    @Insert(onConflict = OnConflictStrategy.ABORT)
    suspend fun insert(sample: BehaviorSampleEntity): Long

    @Query("SELECT * FROM behavior_sample ORDER BY eventTimeMs DESC LIMIT :limit")
    suspend fun latest(limit: Int = 100): List<BehaviorSampleEntity>

    @Query("""
        SELECT * FROM behavior_sample
        WHERE packageName = :packageName
        ORDER BY eventTimeMs DESC
        LIMIT :limit
    """)
    suspend fun latestByPackage(packageName: String, limit: Int = 100): List<BehaviorSampleEntity>

    @Query("""
        DELETE FROM behavior_sample
        WHERE eventTimeMs < :beforeMs
    """)
    suspend fun deleteOlderThan(beforeMs: Long): Int
}