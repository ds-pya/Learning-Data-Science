class CalHintActionReceiver : BroadcastReceiver() {
    override fun onReceive(context: Context, intent: Intent) {
        val choice = intent.getStringExtra("choice") ?: "unknown"
        val summary = intent.getStringExtra("summary") ?: ""
        android.util.Log.i("ContextLens", "calendar_hint_action: choice=$choice summary=${summary.take(80)}")

        val mgr = context.getSystemService(Context.NOTIFICATION_SERVICE) as NotificationManager
        mgr.cancel(2001)
    }
}