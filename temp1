object ScenarioAccess {
    private const val PREF = "scenario_prefs"
    private const val KEY_DIR_URI = "scenario_dir_uri"

    fun saveScenarioDirUri(context: Context, uri: Uri) {
        context.getSharedPreferences(PREF, Context.MODE_PRIVATE)
            .edit()
            .putString(KEY_DIR_URI, uri.toString())
            .apply()
    }

    fun loadScenarioDirUri(context: Context): Uri? {
        val s = context.getSharedPreferences(PREF, Context.MODE_PRIVATE)
            .getString(KEY_DIR_URI, null)
        return s?.let(Uri::parse)
    }
}