class DismissNotificationReceiver : BroadcastReceiver() {
    override fun onReceive(context: Context, intent: Intent) {
        val id = intent.getIntExtra("nid", 2001)
        val mgr = context.getSystemService(Context.NOTIFICATION_SERVICE) as NotificationManager
        mgr.cancel(id)
    }
}

private fun dismissPi(req: Int): PendingIntent {
    val i = Intent(context, DismissNotificationReceiver::class.java)
        .putExtra("nid", 2001)
    return PendingIntent.getBroadcast(
        context,
        req,
        i,
        PendingIntent.FLAG_UPDATE_CURRENT or PendingIntent.FLAG_IMMUTABLE
    )
}

.addAction(Notification.Action.Builder(null, "캘린더", dismissPi(1)).build())
.addAction(Notification.Action.Builder(null, "리마인더", dismissPi(2)).build())
.addAction(Notification.Action.Builder(null, "무시하기", dismissPi(3)).build())
.setAutoCancel(true)