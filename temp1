private fun showToggleNotification(enabled: Boolean) {
    val mgr = getSystemService(NOTIFICATION_SERVICE) as NotificationManager
    val chId = "contextlens_state"

    if (mgr.getNotificationChannel(chId) == null) {
        mgr.createNotificationChannel(
            NotificationChannel(
                chId,
                "ContextLens State",
                NotificationManager.IMPORTANCE_LOW
            )
        )
    }

    val n = Notification.Builder(this, chId)
        .setSmallIcon(android.R.drawable.ic_menu_view)
        .setContentTitle("ContextLens")
        .setContentText(if (enabled) "ON" else "OFF")
        .setOngoing(true)
        .build()

    mgr.notify(1, n)
}