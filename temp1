@Composable
fun StmTimelineCard(
    loadStms: suspend () -> List<StmCardUi>,
    loadFourwsForStm: suspend (Long) -> List<FourwCardUi>,
    onOpenFourwDetail: (Long) -> Unit,
    modifier: Modifier = Modifier,
) {
    val scope = rememberCoroutineScope()

    var loading by remember { mutableStateOf(false) }
    var stmItems by remember { mutableStateOf<List<StmCardUi>>(emptyList()) }
    var expandedStmId by rememberSaveable { mutableStateOf<Long?>(null) }

    val fourwCache = remember { mutableStateMapOf<Long, List<FourwCardUi>>() }
    val fourwLoading = remember { mutableStateMapOf<Long, Boolean>() }

    var previewImage by remember { mutableStateOf<ImageBitmap?>(null) }

    fun refresh() {
        if (loading) return
        loading = true
        scope.launch {
            try {
                stmItems = loadStms()
                expandedStmId = null
                fourwCache.clear()
                fourwLoading.clear()
            } finally {
                loading = false
            }
        }
    }

    fun ensureFourw(stmId: Long) {
        if (fourwCache.containsKey(stmId)) return
        if (fourwLoading[stmId] == true) return
        fourwLoading[stmId] = true
        scope.launch {
            try {
                fourwCache[stmId] = loadFourwsForStm(stmId)
            } finally {
                fourwLoading[stmId] = false
            }
        }
    }

    LaunchedEffect(Unit) { refresh() }

    Card(modifier = modifier) {
        Column(Modifier.padding(16.dp)) {

            Row(
                Modifier.fillMaxWidth(),
                verticalAlignment = Alignment.CenterVertically
            ) {
                Text(
                    "STM Timeline",
                    style = MaterialTheme.typography.titleMedium,
                    modifier = Modifier.weight(1f)
                )
                IconButton(onClick = { refresh() }, enabled = !loading) {
                    Icon(Icons.Filled.Refresh, contentDescription = null)
                }
            }

            if (loading) {
                Spacer(Modifier.height(8.dp))
                LinearProgressIndicator(Modifier.fillMaxWidth())
            }

            Spacer(Modifier.height(12.dp))

            if (!loading && stmItems.isEmpty()) {
                Text("No STM in last 24h.")
                return@Column
            }

            Column(verticalArrangement = Arrangement.spacedBy(10.dp)) {
                stmItems.forEach { stm ->
                    val isExpanded = expandedStmId == stm.stmId

                    StmSummaryCard(
                        summary = stm.summary ?: "(no summary)",
                        isExpanded = isExpanded,
                        onClick = {
                            expandedStmId = if (isExpanded) null else stm.stmId
                            if (!isExpanded) ensureFourw(stm.stmId)
                        }
                    )

                    if (isExpanded) {
                        Spacer(Modifier.height(6.dp))

                        when {
                            fourwLoading[stm.stmId] == true -> {
                                FourwLoadingBlock()
                            }
                            else -> {
                                val rows = fourwCache[stm.stmId].orEmpty()
                                if (rows.isEmpty()) {
                                    Text(
                                        "No 4W linked.",
                                        modifier = Modifier.padding(start = 6.dp)
                                    )
                                } else {
                                    Column(verticalArrangement = Arrangement.spacedBy(8.dp)) {
                                        rows.forEach { fourw ->
                                            FourwMiniCard(
                                                summary = fourw.summary ?: "(no summary)",
                                                thumb = fourw.screenshotThumb,
                                                onThumbClick = {
                                                    previewImage =
                                                        fourw.screenshotFull ?: fourw.screenshotThumb
                                                },
                                                onCardClick = {
                                                    onOpenFourwDetail(fourw.fourwId)
                                                }
                                            )
                                        }
                                    }
                                }
                            }
                        }

                        Spacer(Modifier.height(8.dp))
                    }
                }
            }
        }
    }

    if (previewImage != null) {
        AlertDialog(
            onDismissRequest = { previewImage = null },
            confirmButton = {
                TextButton(onClick = { previewImage = null }) {
                    Text("Close")
                }
            },
            text = {
                Image(
                    bitmap = previewImage!!,
                    contentDescription = null,
                    modifier = Modifier
                        .fillMaxWidth()
                        .aspectRatio(9f / 16f)
                        .clip(RoundedCornerShape(14.dp))
                )
            }
        )
    }
}