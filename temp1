@Composable
fun GuideScreen(
    onChoice: (Choice) -> Unit,
    onDismiss: () -> Unit
) {
    var panelVisible by remember { mutableStateOf(false) }
    var bubbleVisible by remember { mutableStateOf(false) }

    LaunchedEffect(Unit) {
        panelVisible = true
        delay(150)
        bubbleVisible = true
    }

    // âœ… ì „ì²´ í™”ë©´ì€ "ê±°ì˜ ì•„ë¬´ ê²ƒë„ ì—†ëŠ” íˆ¬ëª… ìº”ë²„ìŠ¤"ì²˜ëŸ¼
    Box(
        modifier = Modifier
            .fillMaxSize()
            .background(Color.Transparent)
            .pointerInput(Unit) {
                detectTapGestures(onTap = { onDismiss() })
            }
    ) {
        // âœ… í•˜ë‹¨ë§Œ ìŠ¬ë¼ì´ë“œ ì—… (ìƒë‹¨ì€ ë¹„ì›Œë‘¬ì„œ 'ìƒˆ ì°½' ëŠë‚Œ ìµœì†Œí™”)
        AnimatedVisibility(
            visible = panelVisible,
            enter = slideInVertically(
                initialOffsetY = { it },
                animationSpec = tween(320, easing = FastOutSlowInEasing)
            ) + fadeIn(tween(160)),
            exit = slideOutVertically(
                targetOffsetY = { it },
                animationSpec = tween(220, easing = FastOutSlowInEasing)
            ) + fadeOut(tween(140)),
            modifier = Modifier
                .align(Alignment.BottomCenter)
                .navigationBarsPadding()
                // íŒ¨ë„ ë‚´ë¶€ íƒ­ì€ ë°”ê¹¥ dismissë¡œ ì „ë‹¬ë˜ì§€ ì•Šê²Œ ì†Œë¹„
                .pointerInput(Unit) { detectTapGestures(onTap = { /* consume */ }) }
        ) {
            Column(
                horizontalAlignment = Alignment.CenterHorizontally,
                modifier = Modifier.padding(bottom = 6.dp)
            ) {
                // âœ… ë¡œí‚¤ (í•˜ë‹¨ì—ì„œ ì˜¬ë¼ì˜¨ íŒ¨ë„ ìœ„ì— "ì¡´ì¬"í•˜ê²Œ)
                AnimatedRocky(modifier = Modifier.size(168.dp))

                Spacer(Modifier.height(8.dp))

                // âœ… ë§í’ì„  í•˜ë‚˜ ì•ˆì— ì§ˆë¬¸ + ë¦¬ìŠ¤íŠ¸ ì¹´ë“œ ì„ íƒì§€
                BubbleWithList(
                    visible = bubbleVisible,
                    title = "ê°•ë‚¨ì—­ 18:00 ì•½ì†!",
                    subtitle = "ì§€ê¸ˆ ì¶œë°œí•˜ë©´ 35ë¶„ ì •ë„ì•¼. ì–´ë–»ê²Œ ê°ˆê¹Œ?",
                    items = listOf(
                        BubbleItem("ğŸš—", "ìë™ì°¨ë¡œ ê°€ê¸°", "ë„¤ë¹„ë¡œ ë°”ë¡œ ì•ˆë‚´", Choice.CAR),
                        BubbleItem("ğŸš‡", "ëŒ€ì¤‘êµí†µ ê²½ë¡œ", "í™˜ìŠ¹ í¬í•¨ ìµœì  ê²½ë¡œ", Choice.TRANSIT),
                        BubbleItem("ğŸš•", "íƒì‹œ í˜¸ì¶œ", "ë°”ë¡œ í˜¸ì¶œ í™”ë©´ìœ¼ë¡œ", Choice.TAXI),
                    ),
                    onItemClick = { onChoice(it) }
                )

                Spacer(Modifier.height(10.dp))

                // âœ… ì•„ì£¼ ì‘ì€ íŒíŠ¸ë§Œ
                Text(
                    text = "ë°”ê¹¥ì„ íƒ­í•˜ë©´ ë‹«í˜€ìš”",
                    color = Color.White.copy(alpha = 0.55f),
                    fontSize = 12.sp,
                    modifier = Modifier.padding(bottom = 2.dp)
                )
            }
        }
    }
}

private data class BubbleItem(
    val emoji: String,
    val title: String,
    val desc: String,
    val choice: Choice
)

@Composable
private fun BubbleWithList(
    visible: Boolean,
    title: String,
    subtitle: String,
    items: List<BubbleItem>,
    onItemClick: (Choice) -> Unit
) {
    AnimatedVisibility(
        visible = visible,
        enter = fadeIn(tween(120)) + scaleIn(
            initialScale = 0.96f,
            animationSpec = tween(180, easing = FastOutSlowInEasing)
        ),
        exit = fadeOut(tween(120))
    ) {
        // ë§í’ì„ (ì¹´ë“œ)
        Surface(
            shape = RoundedCornerShape(18.dp),
            color = Color.White.copy(alpha = 0.98f),
            shadowElevation = 8.dp,
            modifier = Modifier
                .widthIn(max = 340.dp)
                .padding(horizontal = 14.dp)
        ) {
            Column(modifier = Modifier.padding(PaddingValues(14.dp))) {
                Text(
                    text = title,
                    color = Color.Black,
                    fontWeight = FontWeight.SemiBold,
                    fontSize = 16.sp
                )
                Spacer(Modifier.height(4.dp))
                Text(
                    text = subtitle,
                    color = Color.Black.copy(alpha = 0.80f),
                    fontSize = 14.sp
                )

                Spacer(Modifier.height(12.dp))
                Divider(color = Color.Black.copy(alpha = 0.10f))
                Spacer(Modifier.height(8.dp))

                // ì„ íƒì§€ ë¦¬ìŠ¤íŠ¸ (ë§í’ì„  ë‚´ë¶€ ì¹´ë“œ ëŠë‚Œ)
                Column(verticalArrangement = Arrangement.spacedBy(8.dp)) {
                    items.forEach { item ->
                        Surface(
                            shape = RoundedCornerShape(14.dp),
                            color = Color.Black.copy(alpha = 0.04f),
                            modifier = Modifier
                                .pointerInput(Unit) {
                                    detectTapGestures(onTap = { onItemClick(item.choice) })
                                }
                        ) {
                            Row(
                                verticalAlignment = Alignment.CenterVertically,
                                modifier = Modifier.padding(horizontal = 12.dp, vertical = 10.dp)
                            ) {
                                Text(item.emoji, fontSize = 18.sp)
                                Spacer(Modifier.height(0.dp))
                                Column(modifier = Modifier.padding(start = 10.dp).weight(1f)) {
                                    Text(
                                        text = item.title,
                                        color = Color.Black,
                                        fontWeight = FontWeight.Medium,
                                        fontSize = 14.sp
                                    )
                                    Text(
                                        text = item.desc,
                                        color = Color.Black.copy(alpha = 0.65f),
                                        fontSize = 12.sp
                                    )
                                }
                                Text("â€º", color = Color.Black.copy(alpha = 0.35f), fontSize = 20.sp)
                            }
                        }
                    }
                }
            }
        }
    }
}